<strong>Sign up</strong>

    <%= form_with model: @user, url: users_path, local: true do |f| %>

    <p>
        <%= f.label :email %><br>
        <%= f.email_field :email %>
    </p>

    <p>
        <%= f.label :password %><br>
        <%= f.password_field :password %>
    </p>

    <p>
        <%= f.label :password_confirmation %><br>
        <%= f.password_field :password_confirmation %>
    </p>

    <p>
        <%= f.label :name %><br>
        <%= f.text_field :name %>
    </p>
    <br>
    <%= f.submit 'Create account' %>
    <% end %>    